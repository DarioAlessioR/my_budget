<div class="signup-login">

<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="div-field-signin-signup">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "your_email@mail.com", class: "field-signin-signup" %>
  </div>

  <div class="div-field-signin-signup">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "field-signin-signup" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="div-field-signin-signup">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>



<%= render "devise/shared/links" %>

</div>
